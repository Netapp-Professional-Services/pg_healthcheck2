{
  "name": "System Resource Usage Alerts",
  "version": "1.0.0",
  "rules": [
    {
      "id": "high_cpu_usage",
      "description": "Alert on high CPU usage",
      "condition": {
        "key": "system_resources.data",
        "filter": {
          "metric": "CPUUsage"
        },
        "value": {
          "gt": 80
        }
      },
      "severity": "warning",
      "message": "High CPU usage detected: {value}%"
    },
    {
      "id": "high_memory_usage",
      "description": "Alert on high memory usage",
      "condition": {
        "key": "system_resources.data",
        "filter": {
          "metric": "MemoryUsage"
        },
        "value": {
          "gt": 80
        }
      },
      "severity": "warning",
      "message": "High memory usage detected: {value}%"
    },
    {
      "id": "high_disk_io",
      "description": "Alert on high disk I/O usage",
      "condition": {
        "key": "system_resources.data",
        "filter": {
          "metric": "DiskIO"
        },
        "value": {
          "gt": 80
        }
      },
      "severity": "warning",
      "message": "High disk I/O usage detected: {value}%"
    }
  ]
}
