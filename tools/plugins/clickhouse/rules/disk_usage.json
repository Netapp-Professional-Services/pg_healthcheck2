{
  "check": "disk_usage",
  "rules": [
    {
      "id": "disk_usage_low_space",
      "description": "Alert if any disk has less than 10% free space",
      "condition": {
        "path": "disk_usage.data",
        "type": "array",
        "check": "any",
        "subcondition": {
          "path": "free_space_percent",
          "type": "number",
          "operator": "lt",
          "value": 10
        }
      },
      "severity": "critical",
      "message": "Disk {name} has less than 10% free space ({free_space_percent}%)."
    }
  ]
}
